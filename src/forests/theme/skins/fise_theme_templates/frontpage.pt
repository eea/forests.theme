<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
         i18n:domain="plone.z3cform"
         metal:use-macro="context/main_template/macros/master">

<body>

<metal:cssslot fill-slot="style_slot">
    <link rel="stylesheet" tal:attributes="href string:${portal_url}/slick.css">
</metal:cssslot>
<metal:javascriptslot fill-slot="javascript_head_slot">
    <script type="text/javascript" tal:attributes="src string:${portal_url}/jquery.slick.js" />
    <script type="text/javascript">
    if (window.matchMedia("(min-width: 800px)").matches) {
        (function($) {
            jQuery.extend(jQuery.easing, {
                'easeOutQuint': function(x, t, b, c, d) {
                    return c * ((t = t / d - 1) * t * t * t * t + 1) + b;
                }
            });
            $(document).ready(function() {

                var $hlSlider = $('#hlslider-slides'),
                        $hlSliderCounter = $('#hlslider-counter'),
                        $hlSliderPrev = $('#hlslider-prev'),
                        $hlSliderNext = $('#hlslider-next'),
                        $hlSliderPhotos = $('.highlight-photos').children();


                var $hlSliderPlaceholder = $('.highlight-placeholder');
                // $('#highlights-slider').prepend($hlSliderPlaceholder);

                var $hlFirstSlide = $($hlSliderPhotos[0]);

                $hlFirstSlide.css({
                    'visibility': 'visible'
                }).addClass('current');
                initSlider();
                $hlSliderPlaceholder.css('opacity', '0');

                function initSlider() {
                    $hlSlider.children().css({'display': 'block'});
                    if (!$hlSlider.slick) {
                        return;
                    }
                    $hlSlider.slick({
                        autoplay: true,
                        autoplaySpeed: 6000,
                        speed: 1000,
                        easing: 'easeOutQuint',
                        adaptiveHeight: false,
                        nextArrow: '',
                        prevArrow: '',
                        useCSS: false
                    });

                    var updateBackgroundPhoto = function(current, next, count) {

                        var dir = next - current;
                        if (next === 0 && current === count - 1) {
                            dir = 1;
                        }
                        if (next === count - 1 && current === 0) {
                            dir = -1;
                        }

                        var $currentImg = $($hlSliderPhotos[current]);
                        var $nextImg = $($hlSliderPhotos[next]);
                        $nextImg.show();

                        var percent = dir * 100 + '%';

                        $nextImg.css({
                            'display': 'block',
                            'transform': 'translate3d(' + percent + ', 0, 0)'
                        });

                        $({'percent': dir * 100}).animate({
                            'percent': 0
                        }, {
                            duration: 1000,
                            easing: 'easeOutQuint',
                            step: function(now) {
                                $nextImg.css({
                                    'transform': 'translate3d(' + now + '%, 0, 0)'
                                });
                            },
                            done: function() {
                                $currentImg.removeClass('current').hide();
                                $nextImg.addClass('current');
                            }
                        });
                    };

                    var i;

                    $hlSlider.on('beforeChange', function(e, slick, currentSlide, nextSlide) {
                        i = (nextSlide ? nextSlide : 0) + 1;
                        $hlSliderCounter.text(i + '/' + slick.slideCount);

                        updateBackgroundPhoto(currentSlide, nextSlide, slick.slideCount);
                    });

                    $hlSliderNext.click(function() {
                        $hlSlider.slick('slickNext');
                    });
                    $hlSliderPrev.click(function() {
                        $hlSlider.slick('slickPrev');
                    });

                }

            });

        }(jQuery))
    }
 </script>
</metal:javascriptslot>

<metal:top metal:fill-slot="portal_top">
    <div id="highlights-slider">
        <div class="highlight-placeholder">
            <img tal:attributes="src string:${portal_url}/placeholder.jpg" src="/Plone/placeholder.jpg"/>
        </div>
        <div class="header-bottom-section">

        </div>
        <div class="header-logos-wrapper">
            <div class="header-logos">

            </div>
        </div>
        <div id="highlights-slider-content">

            <div class="highlight-photos">
                <picture class="highlight-photo current">
                    <img tal:attributes="src string:${portal_url}/forest1.jpg" src="/Plone/1-md-sm.jpg" />
                </picture>
                <picture class="highlight-photo" style="display: none; ">
                    <img tal:attributes="src string:${portal_url}/forest2.jpg" src="/Plone/2-md-sm.jpg" />
                </picture>
                <picture class="highlight-photo" style="display: none; ">
                    <img tal:attributes="src string:${portal_url}/forest3.jpg" src="/Plone/3-md-sm.jpg" />
                </picture>
            </div>
            <div class="slider-highlights">
                <div class="highlights" id="hlslider-slides">
                    <div class="highlight">
                        <h1 class="highlight-description">Welcome to FISE – the entry point to information on European forest issues in support of knowledge based forest governance and sustainable use and management of forests</h1>
                    </div>
                    <div class="highlight" style="display: none; ">
                        <h1 class="highlight-description">Accurate and timely information of the state of forests ecosystems and their resources is essential to achieve sustainable bioeconomy</h1>
                    </div>
                    <div class="highlight" style="display: none; ">
                        <h1 class="highlight-description">A comprehensive knowledge base is our most valuable resource</h1>
                    </div>

                </div>
                <div id="slider-nav"><span class="slider-prev" id="hlslider-prev"></span> <span class="slider-next" id="hlslider-next"></span></div>
            </div>
        </div>
    </div>
    <style>
        #highlights-slider {
            padding-bottom: 3rem!important;
            height: 500px;
        }
        @media (max-width: 800px){
            #highlights-slider {
                display: none;
            }

        }


        #highlights-slider {
            position: relative;
            padding-top: 150px;
        }

        .highlight-placeholder,
        .highlight-photos {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            overflow: hidden;
            z-index: 0;
        }


        .slick-slide {
            height: auto;
        }

        .highlight-placeholder {
            z-index: 1;
            opacity: 1;
            transition: opacity 1s;
        }

        .highlight-placeholder img,
        .highlight-photos img {
            display: block;
            width: 100%;
            height: auto;
        }

        .highlight-photo {
            position: absolute;
            z-index: 100;
            top: 0;
            left: 0;
            display: none;
            width: 100%;
            height: 100%;
        }

        .highlight-photo.current {
            display: block!important;
            z-index: 50;
        }

        .slider-header {
            display: inline-block;
            font-size: larger;
            background-color: rgba(0, 0, 0, .4);
            padding: 10px;
            color: #fff;
        }

        .slider-highlights {

            z-index: 150;
        }

        .slider-title {
            display: inline-block;
            margin: 0;
            font: inherit;
            color: inherit;
            line-height: inherit;
        }

        .highlight-title {
            font-family: 'Roboto', sans-serif;
            font-size: 30px;
            line-height: 35px;
            color: inherit;
        }

        .highlight-title a {
            color: inherit;
        }

        .highlight-description {
            font-size: larger;
            line-height: 1.2;
            margin: 0;
        }


        @media (max-width: 600px) {
            .highlight-photos img {
                height: 100%;
                width: auto;
            }
        }

        @media (min-width: 800px) {
            #highlights-slider {
                padding-top: 240px;
            }
        }

        @media (min-width: 1200px) {
            #highlights-slider {
                padding-top: 376px;
            }
            .highlight-title {
                font-size: 36px;
                line-height: 44px;
            }
        }

        @media (min-width: 1200px) and (max-width: 1331px) {
            #highlights-slider {
                padding-top: 308px;
            }
        }

        @media (min-width: 1600px){
            #highlights-slider {
                padding-top: 500px;
            }
        }

        @media print {

            .slick-track {
                width: auto!important;
                opacity: 1!important;
                transform: none!important;
            }

            .slick-cloned {
                display: none!important;
            }
            #slider-nav,
            .slider-counter {
                display: none;
            }
            .slick-slider {
                min-height: auto!important;
            }
            #highlights-slider {
                padding: 0;
                border-bottom: 0!important;
                margin: 0;
                position: static!important;
                padding-bottom: 0!important;
            }
            .slick-slide {
                width: auto!important;
                padding: 0!important;
            }
        }
    </style>
</metal:top>


<metal:content metal:fill-slot="content">
    <div class="frontpage-content clearfix">
        <div class="categories-wrapper clearfix">
            <div class="categories">
                <a tal:attributes="href string:${portal_url}/policy" class="square policy">
                    <img tal:attributes="src string:${portal_url}/assesment.png"
                            src="/Plone/assesment.png">
                    <div>Policy</div>
                    <p>Read about key legislation and policies directly relevant to the marine environment in Europe.</p>
                </a>
                <a tal:attributes="href string:${portal_url}/indicators" class="square indicators">
                    <img tal:attributes="src string:${portal_url}/indicators.png"
                            src="/Plone/indicators.png">
                    <div>Indicator catalogue</div>
                    <p>Browse the Indicator Catalogue to explore the status of, and pressures affecting the forest environment.</p>
                </a>
                <a tal:attributes="href string:${portal_url}/data-and-maps" class="square data">
                    <img tal:attributes="src string:${portal_url}/data.png"
                            src="/Plone/data.png">
                    <div>Data</div>
                    <p>FISE presents available data related to the implementation of policies where forests are concerned</p>
                </a>
                <a tal:attributes="href string:${portal_url}/data-and-maps" class="square maps">
                    <img tal:attributes="src string:${portal_url}/maps.png"
                            src="/Plone/maps.png">
                    <div>Maps</div>
                    <p>The map viewers help to explore and visualise spatially key topics</p>
                </a>
                <a tal:attributes="href string:${portal_url}/topics" class="square topics">
                    <img tal:attributes="src string:${portal_url}/topics.png"
                            src="/Plone/topics.png">
                    <div>Topics</div>
                    <p>Understand the state, pressures, activities describing, and affecting Europe’s forests.</p>
                </a>
                <a tal:attributes="href string:${portal_url}/countries-and-regions" class="square country">
                    <img tal:attributes="src string:${portal_url}/country.png"
                            src="/Plone/country.png">
                    <div>Country profiles</div>
                    <p>Browse information provided by European countries on their national implementation of forest related policies</p>
                </a>
            </div>
        </div>
    </div>
</metal:content>
</body>
</html>
