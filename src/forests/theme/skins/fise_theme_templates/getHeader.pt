<metal:page define-macro="master"
    tal:define="view context/@@plone;">

    <div class="external-header">

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=2.0, minimum-scale=0.6666"  tal:condition="not:context/REQUEST/skipviewport|nothing" />

        <link rel="stylesheet" tal:attributes="href string:${context/portal_url}/font-awesome.min.css"
            tal:condition="context/REQUEST/ufa|nothing" />

        <link rel="stylesheet" href="" tal:attributes="href string:${context/portal_url}/components/external-templates.css" />

        <metal:external metal:use-macro="context/main_template/macros/external-header"></metal:external>

        <script type="text/javascript" tal:attributes="src string:${context/portal_url}/external_templates.js"></script>

    </div>

</metal:page>
